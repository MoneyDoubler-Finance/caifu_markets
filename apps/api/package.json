{
  "name": "@caifu/api",
  "version": "0.1.0",
  "description": "Caifu Markets API backend",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "db:migrate": "prisma db push && tsx src/scripts/migrate.ts",
    "db:generate": "prisma generate",
    "db:seed": "tsx src/scripts/seed.ts",
    "markets:create:binary": "tsx src/scripts/createBinaryMarket.ts",
    "markets:upsert:bitcoin200k": "tsx src/scripts/upsertBitcoin200kMarket.ts",
    "markets:upsert:chiefs": "tsx src/scripts/upsertChiefsSuperBowlMarket.ts",
    "markets:slugs:rebuild": "tsx src/scripts/rebuildSlugs.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts,.tsx --no-error-on-unmatched-pattern",
    "test": "jest"
  },
  "dependencies": {
    "@caifu/config": "workspace:*",
    "@caifu/sdk": "workspace:*",
    "@caifu/types": "workspace:*",
    "@fastify/cookie": "^9.0.0",
    "@fastify/cors": "^8.0.0",
    "@fastify/jwt": "^7.0.0",
    "@fastify/multipart": "^7.7.3",
    "@fastify/static": "^6.12.0",
    "@fastify/websocket": "^8.0.0",
    "@google-cloud/vision": "^5.3.4",
    "@prisma/client": "^5.0.0",
    "cors": "^2.8.5",
    "fastify": "^4.0.0",
    "ioredis": "^5.0.0",
    "pino": "^9.13.1",
    "prisma": "^5.0.0",
    "tsx": "^4.19.2",
    "viem": "^2.38.2",
    "ws": "^8.16.0",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^22.10.5",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9",
    "jest": "^29.0.0",
    "pino-pretty": "^10.0.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.7.3"
  },
  "prisma": {
    "seed": "tsx src/scripts/seed.ts"
  }
}
